#!/usr/bin/env bash

choice=$(echo -e "browser\nemacs\nspotify\nfile-manager\nmonitors\naudio\nfont-manager" | dmenu)

case "$choice" in
  browser) firefox & ;;
  emacs) emacs & ;;
  spotify) spotify & ;;
  file-manager) dolphin & ;;
  monitors) arandr & ;;
  audio) pavucontrol & ;;
  font-manager) font-manager & ;;
esac
